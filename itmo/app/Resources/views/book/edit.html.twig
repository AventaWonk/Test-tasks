{% extends 'base.html.twig' %}


{% block body %}
    <ol class="breadcrumb breadcrumb-md">
        <li><a href="/">Home</a></li>
        <li>Books</li>
    </ol>
    <a href="/book" class="btn btn-default pull-right">Back</a>
    <h1 class="text-center">{{type}} book</h1>

    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

        <div class="form-group">
            {{ form_label(form.title , null, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.year , null, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.year, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.pages , null, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.pages, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.isbn , null, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.isbn, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.authors , null, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.authors, {'attr': {'class': ''}}) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.image , null, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.image, {'attr': {'class': ''}}) }}
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
            </div>
        </div>

    {{ form_end(form ) }}
{% endblock %}
